# Server Configuration
PORT=5500
NODE_ENV=development
FRONTEND_ORIGIN=http://localhost:3000

# QR Backend Integration
QR_BACKEND_URL=http://localhost:5001

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require
RUNTIME_DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require

# Security
JWT_SECRET=your-jwt-secret-here
BCRYPT_ROUNDS=12

# Multi-tenancy
STRICT_MULTI_TENANCY=true
VERBOSE_TENANT_LOGS=false

# OCR Configuration
GOOGLE_VISION_API_KEY=your-google-vision-api-key

# Google Cloud Storage (Images)
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json
GCS_BUCKET=your-gcs-bucket-name
IMAGE_CDN_BASE=https://storage.googleapis.com/your-bucket-name